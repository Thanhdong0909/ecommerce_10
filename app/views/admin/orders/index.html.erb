<p id="notice"><%= notice %></p>

<h1>Admin Orders</h1>

<%= search_form_for [:admin, @search] do |f| %>
  <%= f.condition_fields do |c| %>
    <div>
      <%= c.attribute_fields do |a| %>
        <%= a.attribute_select%>
      <% end %>
    <%= c.predicate_select %>
    <%= c.value_fields do |v| %>
      <%= v.text_field :value %>
    <% end %>
    </div>
  <% end %>

  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<%= will_paginate %>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t "order.name" %></th>
      <th><%= t "order.address" %></th>
      <th><%= t "order.phone" %></th>
      <th><%= t "order.total" %> </th>
      <th><%= t "order.status" %></th>
      <th><%= t "order.email" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "order", collection: @orders, as: "order" %>
  </tbody>
</table>
