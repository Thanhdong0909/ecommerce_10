<div class="container">
  <div id="content" class="space-top-none">
    <div class="main-content">
      <div class="space60">&nbsp;</div>
      <div class="row">
        <div class="col-sm-12">
          <div class="beta-products-list">
            <h4><%= t ".hot_trend" %></h4>
            <div class="beta-products-details">
              <p class="pull-left"> styles found</p>
              <div class="clearfix"></div>
            </div>

            <div class="row">
              <% @hot_trend_products.each do |hot_trend|%>
                <div class="col-sm-3">
                  <div class="single-item">
                    <div class="single-item-header">
                      <%= link_to hot_trend.product do %>
                        <%= image_tag (get_image hot_trend.product), size: Settings.size_image %>
                      <% end %>
                    </div>
                  <div class="single-item-body">
                        <p class="single-item-title"><%= hot_trend.name %></p>
                        <p class="single-item-price">
                          <span><%= t("product_price", price:hot_trend.price) %></span>
                        </p>
                  </div>
                    <div class="single-item-caption">
                      <%= form_for :carts, url: add_cart_path, method: :POST do |f| %>
                        <div><%= f.hidden_field :product_id, value: hot_trend.id %></div>

                        <%= f.button :submit do %>
                         <span class="add-to-cart pull-left" >
                          <i class="fa fa-shopping-cart"></i>
                          </span>
                          <span class="beta-btn primary"> Add to cart <i class="fa fa-chevron-right"></i> </span>
                        <% end %>
                      <% end %>

                      <div class="clearfix"></div>
                      <br>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div> <!-- .beta-products-list -->

          <div class="space50">&nbsp;</div>

          <div class="beta-products-list">
              <h4><%= t ".recently" %></h4>
              <div class="beta-products-details">
                <p class="pull-left">styles found</p>
                <div class="clearfix"></div>
              </div>
              <%= render "shared/product_recentlys" %>
            </div>
          </div> <!-- .beta-products-list -->
        </div>
      </div> <!-- end section with sidebar and main content -->
    </div> <!-- .main-content -->
  </div> <!-- #content -->
</div> <!-- .container -->
