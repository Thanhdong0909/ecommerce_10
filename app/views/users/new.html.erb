<h1 style="color: red; text-align: center;"> <%= t("sessions.new.signup") %> </h1>
<div class="container">
  <div id="content">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, t("sessions.new.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("sessions.new.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("sessions.new.create_account"), class: "btn btn-primary" %>
    <% end %>
  </div> <!-- #content -->
</div> <!-- .container -->
